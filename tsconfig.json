{
  "compilerOptions": {
    "module": "esnext",
    "sourceMap": true,
    "allowJs": false,
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,

    "alwaysStrict": false,
    "strictFunctionTypes": false,
    "strictPropertyInitialization": false,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}